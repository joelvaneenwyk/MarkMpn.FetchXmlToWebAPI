<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net6.0-windows;net7.0-windows;net8.0-windows</TargetFrameworks>
    <UseWpf>true</UseWpf>
    <AssemblyName>MarkMpn.FetchXmlToWebAPI.Tests</AssemblyName>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageTags>dataverse,linqpaddriver,commondataservice,powerapps,dynamics365</PackageTags>
    <VersionPrefix>1.7.5</VersionPrefix>
    <Authors>Natraj Yegnaraman</Authors>
    <Company>Natraj Yegnaraman</Company>
    <PackageId>MarkMpn.FetchXmlToWebAPI.Tests</PackageId>
    <Product>MarkMpn.FetchXmlToWebAPI.Tests</Product>
    <Description>This driver helps you connect to Dataverse (previous known as CDS) API and query or execute actions against the API. This driver utilises the PowerPlatform-DataverseServiceClient package to generate the early bound classes. The authentication methods supported are Azure, OAuth, Client Secret and Certificate Thumbprint.</Description>
    <RootNamespace>MarkMpn.FetchXmlToWebAPI.Tests</RootNamespace>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/rajyraman/Dataverse-LINQPad-Driver</PackageProjectUrl>
    <RepositoryUrl>https://github.com/rajyraman/Dataverse-LINQPad-Driver</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>Update Azure Identity (1.10.4) and Dataverse Client (1.3.0) packages</PackageReleaseNotes>
    <PackageIcon>LINQPadDriver.png</PackageIcon>
    <PackageIconUrl />
    <Copyright>Natraj Yegnaraman</Copyright>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Version>1.7.5</Version>
    <AssemblyVersion>1.7.5.0</AssemblyVersion>
    <FileVersion>1.7.5.0</FileVersion>
    <Platforms>AnyCPU;x86;ARM32;ARM64;x64</Platforms>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <NoWarn>$(NoWarn);1701;1702;8981;SYSLIB0044</NoWarn>
    <WarningsNotAsErrors>1591</WarningsNotAsErrors>
    <DocumentationFile>$(SolutionDir).build\doc\$(Configuration)\$(Platform)\$(MSBuildProjectName).xml</DocumentationFile>
  </PropertyGroup>
  <ItemGroup>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="FakeXrmEasy.Abstractions.v365" Version="3.3.3" />
    <PackageReference Include="FakeXrmEasy.Core.v365" Version="3.3.3" />
    <PackageReference Include="FakeXrmEasy.Messages.v365" Version="3.3.3" />
    <PackageReference Include="FakeXrmEasy.Plugins.v365" Version="3.3.3" />
    <PackageReference Include="FakeXrmEasy.v365" Version="3.3.3" />
    <PackageReference Include="MSTest" Version="3.2.0"/>
    <PackageReference Include="MSTest.TestAdapter" Version="3.2.0"/>
    <PackageReference Include="MSTest.TestFramework" Version="3.2.0"/>
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="obj\**" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Remove="obj\**" />
  </ItemGroup>
  <ItemGroup>
    <Page Remove="obj\**" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="obj\**" />
  </ItemGroup>
  <Import Project="..\MarkMpn.FetchXmlToWebAPI\MarkMpn.FetchXmlToWebAPI.projitems" Label="Shared" />
</Project>